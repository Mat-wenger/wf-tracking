 html{
 font-size:20px;
 }
 a{
 text-decoration:none;
 color:black;
 }
 .flexcontainer{
 display:flex;
 justify-content:flex-start;
 flex-wrap:wrap;
 }
 .flexcontainer [name]{
 order:2;
 width:25%;
 box-sizing:border-box;
 border:thin dotted gray;
 transition-duration:.25s;
 }
 .flexcontainer [name*="Prime"]{
 order:4;
 border:thin solid gold;
 visibility:collapse;
 }
 .flexcontainer [name*="Vandal"]{
 order:6;
 visibility:collapse;
 }
 .flexcontainer [name*="Prisma"]{
 order:8;
 visibility:collapse;
 }
 .flexcontainer [name*="Wraith"]{
 order:10;
 visibility:collapse;
 }
 .flexcontainer [name*="Mara"]{
 order:12;
 visibility:collapse;
 }
 [class*="separator"]{
 text-align:center;
 box-sizing:border-box;
 width:25%;
 }
 .normal-separator{
 visibility:collapse;
 order:1;
 border:none;
 width:0;
 }
.prime-separator{
 order:3;
 border: thin solid gold;
}
 .vandal-separator{
 order:5;
 border: thin solid blue;
}
 .prisma-separator{
 order:7;
 border: thin solid green;
}
 .wraith-separator{
 order:9;
 border: thin solid black;
}
 .mara-separator{
 order:11;
 border: thin solid red;
}