 html{
 font-size:20px;
 }
 a{
 text-decoration:none;
 color:black;
 }
 .flexcontainer{
 display:flex;
 justify-content:flex-start;
 flex-wrap:wrap;
 }
 .flexcontainer [name]{
 order:2;
 width:25%;
 box-sizing:border-box;
 border:thin dotted gray;
 transition-duration:.25s;
 height:1.5em;
 }
 .flexcontainer [class*="separator"]{
 height:1.5em;
 width:25%;
 box-sizing:border-box;
 }
 .flexcontainer [name*="Prime"]{
 order:3;
 }
 .flexcontainer [name*="Vandal"]{
 order:4;
 }
 .flexcontainer [name*="Prisma"]{
 order:5;
 }
 .flexcontainer [name*="Wraith"]{
 order:6;
 }
 .flexcontainer [name*="Mara"]{
 order:7;
 }
 .flexcontainer [name*="Umbra"]{
 order:8;
 }
 .flexcontainer .normal-separator{
 visibility:collapse;
 order:1;
 border:none;
 width:0;
 }
.prime-separator{
 order:9;
 border: thin solid gold;
}
 .vandal-separator{
 order:9;
 border: thin solid blue;
}
 .prisma-separator{
 order:9;
 border: thin solid green;
}
 .wraith-separator{
 order:9;
 border: thin solid black;
}
 .mara-separator{
 order:9;
 border: thin solid red;
}